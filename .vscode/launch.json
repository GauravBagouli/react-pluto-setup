{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Next.js Dev",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
        "args": ["dev"],
        "env": {
          "PORT": "9006"
        },
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      },
      {
        "name": "Launch Next.js Dev (Turbo)",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
        "args": ["dev", "--turbo"],
        "env": {
          "PORT": "9006"
        },
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      },
      {
        "name": "Serve Built Next.js App",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/serve",
        "args": ["./out"],
        "env": {
          "PORT": "9006"
        },
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      },
      {
        "name": "Build Next.js App",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
        "args": ["build"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      },
      {
        "name": "Start Next.js App",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
        "args": ["start"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      },
      {
        "name": "Lint Next.js App",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
        "args": ["lint"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      },
      {
        "name": "Prepare Husky",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/husky/lib/installer/bin.js",
        "args": [],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal"
      }
    ]
  }
  